        //-   | 3
        //- button.w3-button.w3-white.w3-hide-small
        //-   i.fa.fa-map-pin.w3-margin-right
        //-   | Art
      - var count = 0;
      - for team in teams
        - if (count % 3 == 0)
          .w3-row-padding
        .w3-third.w3-container.w3-margin-bottom.w3-hover-opacity(a href="team")
          div(style="height:200px; overflow: hidden")
            img(src='/dota_logo.png', alt='dota_logo', style="width:100%")
          .w3-container.w3-white
            p
              h4
                b #{team.team_name}
            p
              h5
                b Players
                  li 
                    a(href="#{team.players.player1.steam_profile}") #{team.players.player1.name}
                  li 
                    a(href="#{team.players.player2.steam_profile}") #{team.players.player2.name}
                  li
                    a(href="#{team.players.player3.steam_profile}") #{team.players.player3.name}
                  li
                    a(href="#{team.players.player4.steam_profile}") #{team.players.player4.name}
                  li
                    a(href="#{team.players.player5.steam_profile}") #{team.players.player5.name}
        - count++;
  //-   // Pagination
  .w3-center.w3-padding-32
    .w3-bar
      a.w3-bar-item.w3-button.w3-hover-black(href='#') «
      a.w3-bar-item.w3-black.w3-button(href='#') 1
