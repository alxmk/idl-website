extends ./layout

block header 
  .w3-container.w3-center.w3-padding-64
    h1
      b IBM DOTA LEAGUE
    p Teams

block content
  .w3-main(style='')
    // Header
    header#portfolio.w3-container
      h1
        b#season_no SEASON 1
      .w3-section.w3-bottombar.w3-padding-16
        span.w3-margin-right Season:
        button.w3-button.w3-black 1
        //- button.w3-button.w3-white
        //-   i.fa.fa-diamond.w3-margin-right
        //-   | 2
        //- button.w3-button.w3-white.w3-hide-small
