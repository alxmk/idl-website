extends ./layout

block header
  header.w3-container.w3-center.w3-padding-64
    h1
      b IBM DOTA LEAGUE
    p Enter Game Info
    
block content
  // Enter a game
  .w3-card-4.w3-center.w3-white
    form.w3-container.w3-card-4.w3-light-grey.w3-text-blue.w3-margin(name= 'addteam', action='/addteam', method='post')
      h2.w3-center Enter new Team
      .w3-row.w3-section
        .w3-col(style='width:50px')
          i.w3-xxlarge.fa.fa-user
        .w3-rest
          input.w3-input.w3-border(name='team_name', type='text', placeholder='Team Name')
      - for (var i = 1; i <= 5; i++)
        .w3-row.w3-section
          .w3-col(style='width:50px')
            i.w3-xxlarge.fa.fa-user
          .w3-half
            input.w3-input.w3-border(name='player#{i}', type='text', placeholder='Player #{i}')
          .w3-half
            input.w3-input.w3-border(name='steam_profile#{i}', type='text', placeholder='Steam Profile')
      button.w3-btn-block.w3-section.w3-blue.w3-ripple.w3-padding Send
