extends ./layout

block header
  header.w3-container.w3-center.w3-padding-64
    h1
      b IBM DOTA LEAGUE
    p Enter Game Info
    
block content
  // Enter a game
  .w3-card-4.w3-center.w3-white
    h2.w3-center Select from all fixtures
    - var cols = 3;
    - var rows = 5;
    - var i = 0;
    - var j = 0;
    - var count = 0;
    - for (i = 0; i < rows && count < fixtures.length; i++)
      .w3-row
        - for (j = 0; j < cols && count < fixtures.length; j++)
          .w3-col.l4.w3-padding-8
            a.w3-card-4.w3-button(href='/game_entry?fixture=#{fixtures[count]._id}') #{fixtures[count].team1} vs #{fixtures[count].team2} 
              p Best of #{fixtures[count].best_of} 
              p #{prettyDate(fixtures[count].date)}
          - count++;
    .w3-container.w3-padding-8
      a.w3-button.w3-teal.w3-center(href="/game_entry_fixture_select")
        h4 Click here to view only recent and future fixtures
